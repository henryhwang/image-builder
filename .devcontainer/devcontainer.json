{
  "name": "Debian Sid with Neovim",
  "image": "docker.io/library/debian:sid-slim",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "upgradePackages": true
    }
  },
  "postCreateCommand": "bash -c 'apt-get update && apt-get install -y --no-install-recommends curl ca-certificates neovim",
  "containerEnv": {
    "PATH": "/usr/local/bin:${PATH}"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "vscodevim.vim"
      ]
    }
  },
  "remoteUser": "vscode"
}
